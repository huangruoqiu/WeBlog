/**app.wxss**/
page {
    background: #e9e9e9;
}

.banner {
    margin: 10rpx 15rpx 0;
}

.banner-image {
    display: flex;
    align-items: center;
    height: 400rpx;
    border-radius: 15rpx;
}

.banner-info {
    color: white;
    margin: 0 auto;
    text-align: center;
}

.banner-title {
    font-size: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.content-section {
    width: 70%;
    position: absolute;
    left: 10%;
    top: 10%;
    background: rgba(255, 255, 255, .9);
    border-radius: 15rpx;
    padding: 0rpx 5% 15rpx;
}

.content-title {
    width: fit-content;
    margin: 15rpx auto;
    font-size: 40rpx;
    color: darkcyan;
}